<!-- activity_destinationqueue.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appscreens.DestinationQueue">

    <TextView
        android:id="@+id/landingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal= "true"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:text="@string/destination_queue"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/destQueueRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:background="@android:color/transparent"
        android:layout_below="@id/landingText"/>

</RelativeLayout>

